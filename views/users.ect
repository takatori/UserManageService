<% extend 'layout' %>

<div class="page-header">
	<h1>ユーザ一覧</h1>
</div>

<div class="jumbotron">
	<% if @errors : %>
	<h2>@errors.message</h2>
	<% end %>


	<div class="row">
	<% for user in @users : %>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<a href="/users/<%= user.id %>">
				<img src="<%= user.icon_img %>" class="img-rounded" style="width:300px; height:300px;">
				</a>
			</div>
		</div>
	<% end %>
	</div>

</div>
